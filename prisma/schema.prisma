datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String @id @default(uuid())
  email          String @unique
  password       String
  cards          Card[]                      // The Cards where the user is the giver
  redeemedCards  Card[] @relation("Redeemer") // The Cards where the user is the recipient

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Card {
  id         String  @id @default(uuid())
  qrCode     String  @unique
  balance    Float   @default(0)
  isActive   Boolean @default(true)

  giverId    String
  giver      User    @relation(fields: [giverId], references: [id])

  redeemedBy String?
  recipient  User?   @relation("Redeemer", fields: [redeemedBy], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Transaction {
  id        String   @id @default(uuid())
  amount    Float
  cardId    String
  userId    String
  type      String   // e.g. 'load' or 'redeem'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
